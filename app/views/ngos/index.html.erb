<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list background-board">
      <li class="sidebar-item dshb-btn btn btn-lg btn-block"><%= link_to "Health", healths_path, class: "sidebar-link " %></li>
      <li class="sidebar-item dshb-btn btn btn-lg btn-block"><%= link_to "Education", educations_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item dshb-btn btn btn-lg btn-block"><%= link_to "Community Centers", communities_path, class: "sidebar-link" %></li>
      <li class="sidebar-item dshb-btn btn btn-lg btn-block"><%= link_to "NGOs", ngos_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading" style="display:flex; justify-content:center;">
        NGO Organizations
      </div>
      <div class="panel-body">

        <div class="panel-body">

            <% @ngos.each do |ngo| %>
          <div class="row">
                <div class="col-md-6">
                  <h4><%=link_to ngo.name, ngo %></h4>
                </div>
              <% if current_user.id == ngo.user.id%>
              <div class="col-md-3 right">
                <%= link_to "Manage Posts about this organization","ngos/#{ngo.id}/new_post" , class: "btn btn-form update" %>
                <%= link_to "Update Organization", edit_ngo_path(ngo), class: "btn btn-form update" %>
                <%= button_to "Delete Organization",  ngo,  method: :delete, class: "btn btn-form update", data: { confirm: 'Are you sure?' }  %>
              </div>
              <%end%>
          </div>
            <% end %>
        </div>
      </div>
    </div>
    
</div>
</div>
