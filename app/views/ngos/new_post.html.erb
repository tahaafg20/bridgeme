<div class="row">
  <div class="col-md-12">

  <%# this create margin-left to col-md-3 %>
  <div class="col-md-3">
  </div>
   <%# this create margin-left to col-md-3 %>  

      <%= form_for @post, url:"/ngos/#{@ngo_id}/new_post", :html => { :id => "form" } do |f| %>
        <%# <%= hidden_field_tag :authenticity_token, form_authenticity_token %> 
      <div class="col-md-6 background">   
        <div class="form-group ">
            <label>Post Content</label>
              <%=f.text_field :content, class: "form-control input-lg"%>
        </div>

        <div class="form-group ">
            <%= f.submit "Post", class: "btn btn-primary" %>
        </div>
      </div>
      <%end%>
    </div>
  </div><br>
    <div id="chat">
        <%@posts.each do |post|%>
            <div class="panel">
                <div class="panel-body">
                    <strong><%= post.ngo.name %></strong>
                    <span class="pull-right"><%=link_to "Edit The Post", "/ngos/posts/#{post.id}/edit", :method=> :put %> | <%=link_to "Delete The Post", "/ngos/posts/#{post.id}/destroy", method: "delete", remote: false, data: { confirm: 'Are you sure?' }  %></span>
                    <br/>
                    <div class="row-space-2">
                    <%= post.content %>
                    </div>
                </div>
                </div>
        <%end%>
    </div>
  