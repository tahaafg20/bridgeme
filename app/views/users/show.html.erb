<div class="row">
  <div class="col-md-3">
    <div class="center">
      
      <% if current_user && current_user != @user %>
        <%= button_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post, class: "btn btn-default" %>
      <% end %>
    </div>
    <br/>
    <div class="panel panel-default">
      <div class="panel-heading">Verification</div>
      <div class="panel-body">
        <ul class="sidebar-list">
          <% if @user.confirmation_token %>
            <li>Email Address<span class="pull-right icon-babu"><i class="fa fa-check"></i></span></li>
          <% end %>
          <% if @user.provider %>
            <li>Facebook<span class="pull-right icon-babu"><i class="fa fa-check"></i></span></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

      <div class="col-md-9">
        <div>
         <h2><%= @user.fullname %> &nbsp;&nbsp;&nbsp;&nbsp; | Listings (<%= @rooms.length %>)</h2>
        </div>

        <div class="description row-space-3">
          <%= @user.description %>
        </div>

        <div class="row">
          <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms} %>
        </div>
        <br/><hr>
        
        <h4>Reviews From Guests (<%= @guest_reviews.count %>)</h4>

        <div class="row">
          <%= render "reviews/guest_list" %>
        </div>
        <br/><hr>
        
        <h4>Reviews From Hosts (<%= @host_reviews.count %>)</h4>
        <div class="row">
          <%= render "reviews/host_list" %>
        </div>

  </div>
</div>
