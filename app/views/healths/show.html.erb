
<div class="row">
  <div class="col-md-3">
   </div>
      <div class="col-md-6 info-box">

          <h1 >Organization Info</h1>
          <div class="form-group " id="longtitude" data-long= "<%= @health.longitude %>">

            <label>Organization Name:</label>
            <h2 class="org-name"><%= @health.name %></h2>
            <hr>
            <label>Organization Address:</label> 
            <p><%= @health.address %></p>
             <hr>
          </div>
         

          <div class="form-group">
            <p>Services Provided by this organization: <%= @health.services  %></p>
          </div>
          <hr>
        
        <div class="form-group">
         <p> Phone Number: <div><%= @health.number %></p></div>
        </div>

        <% if @health.link.size > 0 %>
        <div class="form-group">
        <p> The link to this organization's webpage: <div><a href="<%=@health.link%>"><%=@health.link%></a></p></div>
       
        </div>
        <%end%>


        <div class="form-group">
         <p> Accepted Documents: <div><%= @health.accepted_documents %></p></div>
        </div>

        <div class="form-group">
         <p> About this organization: <div><%= @health.about %></p></div>
        </div>

        <%if @health.status == true%>
          <div class="form-group">
          <p> <%=@health.name%> is open for Registration.</p></div>
          </div>
        <%elsif @health.status == false%>
        <div class="form-group">
          <p> <%=@health.name%> is not open for Registration at the moment.</p></div>
          </div>
          <%end%>
          </div>
        <hr/>




        <!-- About -->
      <br>
        <!-- GOOGLE MAP -->
        <div class="row" id="latitude" data-lat= "<%= @health.latitude %>">

      <div class="map1">
        <div id="map" style="map1"></div>
      </div>
      </div>
</div>

<!-- NEAR BY healths -->
    <div class="row">
      <h3>Near by</h3>
  
       <%= render partial: "healths/healths_list", locals: {healths: @health.nearbys(10)}%>
    </div>

<script> 
  var lt = parseFloat(document.querySelector("#latitude").dataset["lat"])
  var ln = parseFloat(document.querySelector("#longtitude").dataset["long"])
  console.log(lt)
  console.log(ln)
  var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat:lt, lng:ln},
          
          zoom: 8
        });
        var marker = new google.maps.Marker({
          position: {lat:lt, lng:ln},
          map: map,
          title: 'Hello World!'
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCLwih_dEjx7rHvO04och6w_zABvfO8Dcw&callback=initMap"
    async defer></script> 
    </div>
    <hr/>