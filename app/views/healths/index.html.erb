<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list background-board">
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Your Health Related Organizations", healths_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Your Education Related Organizations", educations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Your Community Centers", communities_path, class: "sidebar-link" %></li>
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Your NGO Organizations", ngos_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading" style="display:flex; justify-content:center;">
        Health Related Organizations
      </div>
      <div class="panel-body">

        <div class="panel-body">

            <% @healths.each do |health| %>
          <div class="row">
                <div class="col-md-6">
                  <h4><%=link_to health.name, health %></h4>
                </div>
              <% if current_user.id == health.user.id%>
              <div class="col-md-3 right">
              <%= link_to "Manage Posts about this organization","healths/#{health.id}/new_post" ,class: "btn btn-form update" %>
                <%= link_to "Update Organization", edit_health_path(health), class: "btn btn-form update" %>
                <%= button_to "Delete Organization",  health,  method: :delete, class: "btn btn-form update", data: { confirm: 'Are you sure?' }  %>
              </div>
              <%end%>
          </div>
          
            <% end %>
        </div>
      </div>
      <hr>
    </div>
    
</div>
