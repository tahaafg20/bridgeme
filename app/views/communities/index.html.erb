<h1>Communities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Number</th>
      <th>Country</th>
      <th>Services</th>
      <th>About</th>
      <th>Status</th>
      <th>Address</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @communities.each do |community| %>
      <tr>
        <td><%= community.name %></td>
        <td><%= community.email %></td>
        <td><%= community.number %></td>
        <td><%= community.country %></td>
        <td><%= community.services %></td>
        <td><%= community.about %></td>
        <td><%= community.status %></td>
        <td><%= community.address %></td>
        <td><%= community.longitude %></td>
        <td><%= community.latitude %></td>
        <td><%= link_to 'Show', community %></td>
        <td><%= link_to 'Edit', edit_community_path(community) %></td>
        <td><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

