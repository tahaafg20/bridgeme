
<div class="row">
  <div class="col-md-3">
   </div>
      <div class="col-md-6 info-box">

          <h1 >Organization Info</h1>
          <div class="form-group " id="longtitude" data-long= "<%= @education.longitude %>">

            <label>Organization Name:</label>
            <h2 class="org-name"><%= @education.name %></h2>
            <hr>
            <label>Organization Address:</label> 
            <p><%= @education.address %></p>
             <hr>
          </div>
         

          <div class="form-group">
            <p>Services Provided by this organization: <%= @education.services  %></p>
          </div>
          <hr>
        
        <div class="form-group">
         <p> Phone Number: <div><%= @education.number %></p></div>
        </div>

        <% if @education.link.size > 0  %>
        <div class="form-group">
         <p> The link to this organization's webpage: <div><a href="<%=@education.link%>"><%=@education.link%></a></p></div>
        </div>
        <%end%>


        <div class="form-group">
         <p> Accepted Documents: <div><%= @education.accepted_documents %></p></div>
        </div>

        <div class="form-group">
         <p> About this organization: <div><%= @education.about %></p></div>
        </div>

        <%if @education.status == true%>
          <div class="form-group">
          <p> <%=@education.name%> is open for Registration.</p></div>
          </div>
        <%elsif @education.status == false%>
        <div class="form-group">
          <p> <%=@education.name%> is not open for Registration at the moment.</p></div>
          </div>
          <%end%>
          </div>
        <hr/>




        <!-- About -->
