
<div class="row">
  <div class="col-md-3">
   </div>
      <div class="col-md-6 info-box">

          <h1 >Organization Info</h1>
          <div class="form-group " id="longtitude" data-long= "<%= @education.longitude %>">

            <label>Organization Name:</label>
            <h2 class="org-name"><%= @education.name %></h2>
            <hr>
            <label>Organization Address:</label> 
            <p><%= @education.address %></p>
             <hr>
          </div>
         

          <div class="form-group">
            <p>Services Provided by this organization: <%= @education.services  %></p>
          </div>
          <hr>
        
        <div class="form-group">
         <p> Phone Number: <div><%= @education.number %></p></div>
        </div>

        <% if @education.link.size > 0  %>
        <div class="form-group">
         <p> The link to this organization's webpage: <div><a href="<%=@education.link%>"><%=@education.link%></a></p></div>
        </div>
        <%end%>


        <div class="form-group">
         <p> Accepted Documents: <div><%= @education.accepted_documents %></p></div>
        </div>

        <div class="form-group">
         <p> About this organization: <div><%= @education.about %></p></div>
        </div>

        <%if @education.status == true%>
          <div class="form-group">
          <p> <%=@education.name%> is open for Registration.</p></div>
          </div>
        <%elsif @education.status == false%>
        <div class="form-group">
          <p> <%=@education.name%> is not open for Registration at the moment.</p></div>
          </div>
          <%end%>
          </div>
        <hr/>




        <!-- About -->
       <br>
        <!-- GOOGLE MAP -->
        <div class="row" id="latitude" data-lat= "<%= @education.latitude %>">

      <div class="map1">
        <div id="map" style="map1"></div>
      </div>
      </div>
</div>

<!-- NEAR BY educations -->
    <div class="row">
      <h3>Near by</h3>
     
      <% for education in @education.nearbys(10) %>
       
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading preview">
            <a href="<%=@education.link%>"><%=@education.link%></a>
                <br/> About        : <%=education.about%>   
                <br/> Accepted documents: <%=education.accepted_documents%>
                <br/> Services: <%=education.services%>
                (<%= education.distance.round(2) %> kms away)
              </div>
            </div>
          </div>
      <% end %>
    </div>

<script> 
  var lt = parseFloat(document.querySelector("#latitude").dataset["lat"])
  var ln = parseFloat(document.querySelector("#longtitude").dataset["long"])
  console.log(lt)
  console.log(ln)
  var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat:lt, lng:ln},
          
          zoom: 8
        });
        var marker = new google.maps.Marker({
          position: {lat:lt, lng:ln},
          map: map,
          title: 'Hello World!'
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCLwih_dEjx7rHvO04och6w_zABvfO8Dcw&callback=initMap"
    async defer></script> 
    </div>
    <hr/>

