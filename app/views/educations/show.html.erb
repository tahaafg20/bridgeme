            <div class="col-md-3">
          </div>
        
     <div class="col-md-6 info-box">
     <div class="col-md-6 info-box" id="latitude" data-lat= "<%= @community.latitude %>">
        <div class="map-image map-radius" id="map" ></div>
    </div>
</div>

