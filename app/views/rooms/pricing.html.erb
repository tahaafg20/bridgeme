<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label>Price</label>
                <%= f.text_field :price, placeholder: "eg: 100 (the currency is RM)", class: "form-control", required: true %>
              </div>
            
            <div class="row col-md-3">
              <%= f.submit "Save", class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
