
<div class="container">
<div class="panel panel-default box-border">
   <h3 class="headertext">Add Your Place To Our Website To Get Guests</h3>
  <div class="panel-body"><br><br>
    <div class="container">

      <%= form_for @room do |f| %>

        <div class="row">

         
          <div class="col-md-4 select margin-fixing">
            <div class="form-group">
              <label>Room Type</label>
              <%= f.select :room_type, [["Small Room", "Small Room"], ["Middle Room", "Middle Room"], ["Master Room", "Master Room"]],
                            id: "room_type", prompt: "Select...", class: "form-control" %>
            </div>
          </div>

          <%# <div class="col-md-4 select"> %>
            <%# <div class="form-group"> %>
              <%# <label>Booking Type</label> %>
              <%# <%= f.select :instant, Room.instants.map {|key,value| [key.humanize, key]}, selected: 'Instant', prompt: "Select...", class: "form-control" %> 
            <%# </div> %>
          <%# </div> %>

          <div class="col-md-4 select margin-fixing">
            <div class="form-group">
              <label>Accommodate</label>
              <%= f.select :accommodate, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                            id: "accommodate", prompt: "Select...", class: "form-control" %>
            </div>
          </div>

          
        </div>
            <label>Room Cover Photo</label>
              <%= f.file_field :cover %>
              <label>Images</label>
              <%= f.file_field :images, multiple: true %><br>
              <%= f.submit "Create My Room", class: "btn btn-primary " %>
              
        <% end %>
    </div>
  </div>
</div>
</div>