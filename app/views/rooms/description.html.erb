<div class="container">
<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="container" style="margin-left: 15px;">
          <%= form_for @room do |f| %>

            <div class="row" >
              <div class="form-group">
              <div class="col-md-8">
                <label>Listing name</label>
                <%= f.text_field :listing_name, placeholder: "What is your listing name?", class: "form-control", required: true %>
              </div>
            </div>
            </div>

            <div class="row" style="margin-top:20px;">
              <div class="form-group">
              <div class="col-md-8">
                <label>Summary</label>
                <%= f.text_area :summary, rows: 5, placeholder: "Summary of your house", class: "form-control", required: true %>
              </div>
            </div>

            <div class="col-md-8">
              <div style="margin-top:20px;">
                <%= f.submit "Save", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
</div>