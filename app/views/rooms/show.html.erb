<!-- Image -->
<div class="row">
  <div class="col-md-12">
    <%= image_tag @room.cover, width: "50%" %>
  </div>
</div>
<br/>

<div class="row">

  <!-- LEFT PANEL -->
  <div class="col-md-8">

  <div>
     Hosted By (<%= @room.user.fullname %>)
  </div>
  <hr>

  
    <!-- Listing Name -->
    <div class="row">
      <div class="col-md-12">
        <h3 class="details">Details </h3>
        <h2><%= @room.listing_name %></h2>
        <%= @room.address %>
      </div> 
    </div>
    <hr/>

    <!-- Room Info -->
    <div class="row text-babu">
      <div class="row row-space-1">

        

        <div class="col-md-3">
          <i class="fas fa-user fa-2x icon2"></i><br>
          <%= pluralize(@room.accommodate, "Guest") %>
        </div>

        <div class="col-md-3">
          <i class="fa fa-bed fa-2x icon"></i><br>
          <%= pluralize(@room.accommodate, "Guest") %>
        </div>

      </div>
    </div>
    <hr/>

    <!-- About -->
    <div class="row">
      <div class="col-md-12">
        <h4>About This Listing</h4>
        <p><%= @room.summary %></p>
      </div>
    </div>
    <hr/>

    <!-- Amenities -->
    <div class="row">
      <div class="col-md-3">
        <h4>Amenities Included</h4>
      </div>

      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@room.is_tv %>">TV <i class="fas fa-tv fa-1x"></i></li>
              <li class="<%= 'text-line-through' if !@room.is_kitchen %>">Kitchen <i class="fas fa-utensils"></i></li>
              <li class="<%= 'text-line-through' if !@room.is_internet %>">Internet <i class="fas fa-wifi fa-1x"></i></li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class="amenities">
              <li class="<%= 'text-line-through' if !@room.is_heating %>">Heating  <i class="fas fa-temperature-low"></i></li>
              <li class="<%= 'text-line-through' if !@room.is_air %>">Air Conditioning <i class="fas fa-fan"></i></li>
            </ul>
          </div>

        </div>
      </div>

    </div>


    <!-- Carousel -->
    <div class="row">
      <% if @photos.length > 0 %>
      
            <% @photos.each do |photo| %>
                  <%= image_tag(url_for(photo),size:"300x300") %>
            <% end %>
          </div>
      <% end %>
    </div>
    <hr/>


    <!-- REVIEWS -->
    <div class="row" id="longtitude" data-long= "<%= @room.longitude %>">
      <div class="col-md-12">
        <h4>
          <%= pluralize(@guest_reviews.count, "Review") %><br>
          <span id="average_rating"></span>
        </h4>
        <div class="container">
          <div><%= render "reviews/guest_list" %></div>
        </div>
      </div>
    </div>
    <br/>
    <hr/>

    <!-- GOOGLE MAP -->
    <div class="row" id="latitude" data-lat= "<%= @room.latitude %>">

      <div id="map" style="width: 100%; height: 400px; border-radius: 5px;"></div>

     <script> 
  var lt = parseFloat(document.querySelector("#latitude").dataset["lat"])
  var ln = parseFloat(document.querySelector("#longtitude").dataset["long"])
  var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat:lt, lng:ln},
          
          zoom: 8
        });
        var marker = new google.maps.Marker({
          position: {lat:lt, lng:ln},
          map: map,
          title: 'Hello World!'
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCLwih_dEjx7rHvO04och6w_zABvfO8Dcw&callback=initMap"
    async defer></script> 
    </div>

    <!-- NEAR BY ROOMS -->
    <div class="row">
      <h3>Near by</h3>
      <% for room in @room.nearbys(10) %>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading preview">
                <%= image_tag url_for(room.cover) %>
              </div> 
              <div class="panel-body">
                <%= link_to room.listing_name, room %><br/>
                (<%= room.distance.round(2)%> kms away)
               </div> 
            </div> 
          </div>
      <% end %> 
   </div>

  </div> 
  


  <!-- RIGHT PANEL -->
  <div class="col-md-4">
    <!-- Reservation Form -->
    <%= render 'reservations/form' %>
  </div>
</div>

<script>
$(document).ready(function() {
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @room.average_rating %>
  });
});
</script>
