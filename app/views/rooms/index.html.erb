<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading" style="display:flex; justify-content:center;">
        Listings
      </div>
      <div class="panel-body">

        <% @rooms.each do |room| %>
          <div class="row">
            <div class="col-md-7">
              <h4><%= room.listing_name %></h4>
              <div class="panel-heading preview">
              <%= image_tag(url_for(room.cover),size:"100x250") %>
            </div>
            </div>
            <div class="row right">
              <i class="fas fa-pencil-alt fa-2x"></i><%= link_to "Update", listing_room_path(room), class: "btn btn-form edit-btn-for-index" %>
              <i class="far fa-trash-alt fa-2x"></i><%= link_to "Delete",  room,  method: :delete, class: "btn btn-form edit-btn-for-index", data: { confirm: 'Are you sure?' }  %>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>
