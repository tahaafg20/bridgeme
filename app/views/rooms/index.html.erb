<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list background">
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Your Listings", rooms_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item  btn btn-lg btn-block dshb-btn"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link" %></li>
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Your Organizations", your_organizations_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading" style="display:flex; justify-content:center;">
        Listings
      </div>
      <div class="panel-body">

        <div class="panel-body">

            <% @rooms.each do |room| %>
          <div class="row">
                <div class="col-md-6">
                  <h4><%=link_to room.listing_name, room %></h4>
                  <div class="panel-heading preview">
                    <%= image_tag(url_for(room.cover), size:"350x300") %>
                  </div>
                </div>

              <div class="col-md-3 right pt-6">
                <%= link_to "Update", listing_room_path(room), class: "btn btn-form update" %>
                <%= link_to "Delete",  room,  method: :delete, class: "btn btn-form update", data: { confirm: 'Are you sure?' }  %>
              </div>
          </div>
            <hr/>
            <% end %>

          
        </div>
      </div>
    </div>
    
</div>
</div>
