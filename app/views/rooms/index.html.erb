<%# <div class="container"> %>
<div class="row" style="margin: 0px 50px 0px 50px;">
  <div class="col-md-3">
    <ul class="sidebar-list background">
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Listings", rooms_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item  btn btn-lg btn-block dshb-btn"><%= link_to "Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item btn btn-lg btn-block dshb-btn"><%= link_to "Trips", your_trips_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">

        <div class="panel-body">

            <% @rooms.each do |room| %>
          <div class="row" style="border: 1px solid #ECECEC;padding:30px 0px 30px 30px; border-radius: 5px; margin-bottom: 10px;">
                <div class="col-md-8">
                  <h4><%=link_to room.listing_name, room %></h4>
                  <div class="panel-heading preview">
                    <%= image_tag(url_for(room.cover), size:"300x400") %> 
                  </div>
                </div>
              
              <div class="col-md-3 right" style="margin-top: 50px;">
                <%= link_to "Update", listing_room_path(room), class: "btn btn-form update" %>
                </div>
                <div class="col-md-3 right" style="margin-top: 10px;" >
                <%= button_to "Delete",  room,  method: :delete, class: "btn btn-form update", data: { confirm: 'Are you sure?' }  %>
              </div>
          </div>
        
            <% end %>
             
          
        </div>
      </div>
    </div>
    
</div>
</div>
<%# </div> %>